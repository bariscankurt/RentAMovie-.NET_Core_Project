@model Kiralama.Models.RegisterModel
@{
    ViewData["Title"] = "Hesap Oluştur";
}


<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center" >
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   Kullanıcı Oluştur
                </h1>
                </div>
        </div>
    </div>
</section>
<div class="container" style="text-align:center">

    <div class="text-danger" asp-validation-summary="All"></div>
    
    <h5><a asp-action="Login" asp-controller="Account"> Giriş </a></h5>
    <br />



    <form asp-action="Register" method="post">

        <div class="form-group" style="text-align:center">
            <label>Email</label>
            <input style="text-align:center" asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="form-group" style="text-align:center">
            <label> Kullanıcı Adı</label>
            <input style="text-align:center" asp-for="UserName" class="form-control" />
        </div>


        <div class="form-group" style="text-align:center">
            <label>Şifre</label>
            <input style="text-align:center" asp-for="Password" type="password" class="form-control" />
        </div>



        <button type="submit" class="btn btn-primary">Kayıt Ol</button>



    </form>

</div>

